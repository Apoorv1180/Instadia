<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#1E88E5"
                android:endColor="#90CAF9"
                android:centerX="2"
                android:centerY="3"/>
            <stroke android:width="1dp" android:height="2dp"
                android:color="#ffffff" />
            <padding android:left="1dp" android:top="1dp" android:right="1dp"
                android:bottom="1dp" />

            <corners android:radius="28dp" android:bottomRightRadius="28dp"
                android:bottomLeftRadius="28dp" android:topLeftRadius="28dp"
                android:topRightRadius="28dp"
                />

        </shape>
    </item>

</layer-list>