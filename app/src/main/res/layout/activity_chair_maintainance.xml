<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/all_background"
        android:orientation="vertical"
        tools:context=".ChairMaintainanceActivity">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="10dp"
            android:indeterminate="true"
            android:translationY="7dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/chair_main_image_view"
            android:layout_width="200dp"
            android:layout_height="164dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/camera" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="PAVILION"
                android:textSize="16sp" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="P"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/chair_keeping_pavallion_edit_text"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="16sp" />
        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/chair_block_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:ems="10"
                android:hint="@string/block"
                android:inputType="textCapWords"
                android:maxLength="1"
                android:textAllCaps="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/chair_seat_number_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:ems="10"
                android:hint="@string/seat_number"
                android:inputType="number"
                android:maxLength="3" />
        </android.support.design.widget.TextInputLayout>

        <RadioGroup
            android:id="@+id/chair_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp">

            <RadioButton
                android:id="@+id/chair_screw_radio_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/customborder"
                android:buttonTint="@color/colorWhite"
                android:text="@string/screw_fixing"
                android:textColor="@color/colorWhite" />

            <RadioButton
                android:id="@+id/chair_chair_repair_radio_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/customborder"
                android:buttonTint="@color/colorWhite"
                android:text="@string/chair_repair"
                android:textColor="@color/colorWhite" />

            <RadioButton
                android:id="@+id/chair_seat_number_painting_radio_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/customborder"
                android:buttonTint="@color/colorWhite"
                android:text="@string/seat_no_painting"
                android:textColor="@color/colorWhite" />

            <RadioButton
                android:id="@+id/chair_frame_repair_radio_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/customborder"
                android:buttonTint="@color/colorWhite"
                android:text="@string/frame_repair"
                android:textColor="@color/colorWhite" />

            <RadioButton
                android:id="@+id/chair_other_radio_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/customborder"
                android:buttonTint="@color/colorWhite"
                android:text="@string/other"
                android:textColor="@color/colorWhite" />

        </RadioGroup>

        <Button
            android:id="@+id/chair_save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/customborder1"
            android:text="@string/save"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>