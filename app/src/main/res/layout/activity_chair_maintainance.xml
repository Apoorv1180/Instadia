<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/all_background"
    android:orientation="vertical"
    tools:context=".ChairMaintainanceActivity">

    <ImageView
        android:id="@+id/house_keeping_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/camera" />

    <EditText
        android:id="@+id/chair_block_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:hint="@string/block"
        android:inputType="textPersonName"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/chair_seat_number_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:hint="@string/seat_number"
        android:inputType="textPersonName" />

    <RadioGroup
        android:id="@+id/chair_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <RadioButton
            android:id="@+id/chair_screw_radio_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/customborder"
            android:buttonTint="@color/colorWhite"
            android:text="@string/screw_fixing"
            android:textColor="@color/colorWhite" />

        <RadioButton
            android:id="@+id/chair_chair_repair_radio_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/customborder"
            android:buttonTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:text="@string/chair_repair"
             />

        <RadioButton
            android:id="@+id/chair_seat_number_painting_radio_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/customborder"
            android:buttonTint="@color/colorWhite"
            android:text="@string/seat_no_painting"
            android:textColor="@color/colorWhite" />

        <RadioButton
            android:id="@+id/chair_frame_repair_radio_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/customborder"
            android:buttonTint="@color/colorWhite"
            android:text="@string/frame_repair"
            android:textColor="@color/colorWhite" />

        <RadioButton
            android:id="@+id/chair_other_radio_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/customborder"
            android:buttonTint="@color/colorWhite"
            android:text="@string/other"
            android:textColor="@color/colorWhite" />

    </RadioGroup>

    <Button
        android:id="@+id/chair_save_button"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/customborder1"
        android:text="@string/save"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />


</LinearLayout>