<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:background="@drawable/all_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        tools:context=".ChairMaintainanceReport"
        android:orientation="vertical">


        <Button
            android:id="@+id/screwFixing_btn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/customborder1"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="screw fixing"
            android:onClick="screwFixing_btn"/>


        <Button
            android:id="@+id/chairReplace_btn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/customborder1"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="chair replace"
            android:onClick="chairReplace_btn"/>


        <Button
            android:id="@+id/frameRepair_btn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/customborder1"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="frame repair"
            android:onClick="frameRepair_btn"/>

        <Button
            android:id="@+id/seatNoPainting_btn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/customborder1"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="seat no painting"
            android:onClick="seatNoPainting_btn"/>

        <Button
            android:id="@+id/others_btn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/customborder1"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="others"
            android:onClick="others_btn"/>

    </LinearLayout>
</RelativeLayout>