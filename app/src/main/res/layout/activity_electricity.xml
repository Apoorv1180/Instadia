<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_background"
    android:orientation="vertical"
    tools:context=".ElectricityActivity">
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginTop="10dp"
        android:indeterminate="true"
        android:translationY="7dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/electricity_image_view"
        android:layout_width="200dp"
        android:layout_height="164dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/camera" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">
    <EditText
        android:id="@+id/electricity_comment_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:hint="@string/issue_description"
        android:inputType="text" />
    </android.support.design.widget.TextInputLayout>
    <RadioGroup
        android:id="@+id/electricity_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp">

        <RadioButton
            android:id="@+id/electricity_ac_radio_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:buttonTint="@color/colorWhite"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:text="@string/ac" />

        <RadioButton
            android:id="@+id/electricity_light_radio_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:layout_marginTop="3dp"
            android:buttonTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:text="@string/light" />

        <RadioButton
            android:id="@+id/electricity_wiring_radio_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:buttonTint="@color/colorWhite"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:text="@string/wiring" />

        <RadioButton
            android:id="@+id/electricity_other_radio_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:layout_marginTop="3dp"
            android:buttonTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:text="@string/any_other_specification_issue" />
    </RadioGroup>

    <Button
        android:id="@+id/electricity_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold
"
        android:textColor="@color/colorWhite"
        android:background="@drawable/customborder1"
        android:text="@string/save"
         />
</LinearLayout>
</ScrollView>