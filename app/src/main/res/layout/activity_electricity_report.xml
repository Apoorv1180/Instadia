<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:background="@drawable/all_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ElectricityReport"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/ac_btn"
            android:background="@drawable/customborder1"
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="ac"
            android:onClick="ac_btn"/>

        <Button
            android:id="@+id/lights_btn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/customborder1"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="lights"
            android:onClick="lights_btn"/>



        <Button
            android:id="@+id/fan_btn"
            android:background="@drawable/customborder1"
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="fan"
            android:onClick="fan_btn"/>


        <Button
            android:id="@+id/wiring_btn"
            android:background="@drawable/customborder1"
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="wiring"
            android:onClick="wiring_btn"/>



        <Button
            android:id="@+id/any_other_btn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/customborder1"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="Any other"
            android:onClick="any_other_btn"/>
    </LinearLayout>
</RelativeLayout>