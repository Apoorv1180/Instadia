<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:background="@drawable/all_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InfraReport"
        android:layout_marginTop="50dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/civil_btn"
            android:layout_width="220dp"
            android:layout_height="49dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="civil"
            android:onClick="civil_btn"/>


        <Button
            android:id="@+id/lift_btn"
            android:layout_width="220dp"
            android:layout_height="49dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="lift"
            android:onClick="lift_btn"/>


        <Button
            android:id="@+id/plumbing_btn"
            android:layout_width="220dp"
            android:layout_height="49dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="plumbing"
            android:onClick="plumbing_btn"/>

        <Button
            android:id="@+id/drainage_btn"
            android:layout_width="222dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="Drainage"
            android:onClick="drainage_btn"/>

    </LinearLayout>
</RelativeLayout>