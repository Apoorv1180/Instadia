<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:id="@+id/username"
            android:text="TEXT"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/stand"
                android:text="TEXT"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/date"
                android:text="TEXT"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/pavallion"
                android:layout_weight="1"
                android:text="TEXT"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/chair_number"
                android:layout_weight="1"
                android:text="TEXT"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/housekeeping_percentage"
                android:text="TEXT"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/floor"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/work_category"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/sub_work_category"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/issue_description"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="match_parent"
                android:id="@+id/completionStatus"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>